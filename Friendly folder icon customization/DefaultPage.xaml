<Page x:Name="DefaultView" x:Class="Friendly_folder_icon_customization.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="284" d:DesignWidth="386"
	Title="DefaultPage">
    <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemTemplate="{StaticResource IconTemplate}" ItemsSource="{Binding Path=Items}" SelectionMode="Single">
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel IsItemsHost="True" Width="386"/>
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
    </ListView>
</Page>
