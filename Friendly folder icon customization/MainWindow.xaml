<Window x:Class="Friendly_folder_icon_customization.MainWindow"
        x:Name="MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize"
        >
    <Grid HorizontalAlignment="Left" Height="304" Margin="10,10,0,0" VerticalAlignment="Top" Width="501">

        <ListBox HorizontalAlignment="Left" Height="136" VerticalAlignment="Top" Width="100" Margin="0,105,0,0">
            <ListBoxItem Content="Icon Library"/>
            <ListBoxItem Content="Icon Storage"/>
            <ListBoxItem Content="DLL Resource"/>
        </ListBox>
        <Image x:Name="CurrentIcon" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="10,246,0,0" VerticalAlignment="Top" Width="75" Click="Save_click"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="10,273,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_click"/>
        <Grid HorizontalAlignment="Left" Height="100" Margin="267,216,0,-12" VerticalAlignment="Top" Width="100"/>
        <Frame x:Name="FrameView" Height="254" Margin="0,40,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="386"/>
    </Grid>
</Window>